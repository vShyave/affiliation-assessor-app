<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:jr="http://openrosa.org/javarosa"
    xmlns:odk="http://www.opendatakit.org/xforms"
    xmlns:orx="http://openrosa.org/xforms"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <h:head>
        <h:title>Nursing Form-Medical (Clinical Facilities)</h:title>
        <model odk:xforms-version="1.0.0">
            <instance>
                <data id="Nursing Form-Medical (Clinical Facilities)" version="1">
                    <username/>
                    <start/>
                    <end/>
                    <today/>
                    <deviceid/>
                    <subscriberid/>
                    <part1_7>
                        <notei/>
                        <notej/>
                        <parent_add/>
                        <hosp_codeofHos/>
                        <p_letter/>
                        <img_p_letter/>
                        <url1/>
                        <beds_hosp/>
                        <total_ipd/>
                        <dept_parent_hosp/>
                    </part1_7>
                    <meta>
                        <instanceID/>
                    </meta>
                </data>
            </instance>
            <bind jr:preload="property" jr:preloadParams="username" nodeset="/data/username" type="string"/>
            <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/data/start" type="dateTime"/>
            <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/data/end" type="dateTime"/>
            <bind jr:preload="date" jr:preloadParams="today" nodeset="/data/today" type="date"/>
            <bind jr:preload="property" jr:preloadParams="deviceid" nodeset="/data/deviceid" type="string"/>
            <bind jr:preload="property" jr:preloadParams="subscriberid" nodeset="/data/subscriberid" type="string"/>
            <bind nodeset="/data/part1_7/notei" readonly="true()" type="string"/>
            <bind nodeset="/data/part1_7/notej" readonly="true()" type="string"/>
            <bind nodeset="/data/part1_7/parent_add" type="string"/>
            <bind nodeset="/data/part1_7/hosp_codeofHos" type="string"/>
            <bind nodeset="/data/part1_7/p_letter" type="string"/>
            <bind nodeset="/data/part1_7/img_p_letter" relevant=" /data/part1_7/p_letter ='yes'" type="binary"/>
            <bind nodeset="/data/part1_7/url1" relevant=" /data/part1_7/p_letter ='yes'" type="string"/>
            <bind nodeset="/data/part1_7/beds_hosp" type="int"/>
            <bind nodeset="/data/part1_7/total_ipd" type="int"/>
            <bind nodeset="/data/part1_7/dept_parent_hosp" type="string"/>
            <bind jr:preload="uid" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>
        </model>
    </h:head>
    <h:body class="pages">
        <group appearance="field-list" ref="/data/part1_7">
            <input ref="/data/part1_7/notei">
                <label>Please visit the parent/affiliate hospital and observe the following</label>
            </input>
            <input ref="/data/part1_7/notej">
                <label>###Clinical Facilities</label>
            </input>
            <input ref="/data/part1_7/parent_add">
                <label>Complete address of the parent/affiliate hospital</label>
            </input>
            <input ref="/data/part1_7/hosp_codeofHos">
                <label>Health Facility Registry/Code of Hospital</label>
            </input>
            <select1 ref="/data/part1_7/p_letter">
                <label>Permission letter or letter of information for current year</label>
                <item>
                    <label>Yes</label>
                    <value>yes</value>
                </item>
                <item>
                    <label>No</label>
                    <value>no</value>
                </item>
            </select1>
            <upload mediatype="image/*" ref="/data/part1_7/img_p_letter">
                <label>Upload</label>
            </upload>
            <input ref="/data/part1_7/url1">
                <label>URL</label>
            </input>
            <input ref="/data/part1_7/beds_hosp">
                <label>Number of beds in parent/affiliate hospital</label>
            </input>
            <input ref="/data/part1_7/total_ipd">
                <label>Total number of IPD patients in parent/affiliate hospital in 1 month</label>
            </input>
            <select ref="/data/part1_7/dept_parent_hosp">
                <label>Departments at the parent/affiliate hospital</label>
                <item>
                    <label>Medical</label>
                    <value>med</value>
                </item>
                <item>
                    <label>Surgical</label>
                    <value>sur</value>
                </item>
                <item>
                    <label>Obst. &amp; Gynecology</label>
                    <value>obst</value>
                </item>
                <item>
                    <label>Pediatrics</label>
                    <value>ped</value>
                </item>
                <item>
                    <label>Ortho</label>
                    <value>orthi</value>
                </item>
                <item>
                    <label>Others</label>
                    <value>others</value>
                </item>
                <item>
                    <label>None</label>
                    <value>none</value>
                </item>
            </select>
        </group>
    </h:body>
</h:html>